<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.mc21.attendancecheck.CompanySignupActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_signup_name_field"
        android:layout_marginTop="60dp"
        android:hint="@string/company_name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/company_signup_email_field"
        android:layout_alignStart="@+id/company_signup_email_field"
        android:layout_alignRight="@+id/company_signup_email_field"
        android:layout_alignEnd="@+id/company_signup_email_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/company_signup_email_field"
        android:hint="@string/email"
        android:layout_below="@+id/company_signup_name_field"
        android:layout_alignLeft="@+id/company_signup_password_field"
        android:layout_alignStart="@+id/company_signup_password_field"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/company_signup_password_field"
        android:layout_marginTop="53dp"
        android:hint="@string/password"
        android:layout_below="@+id/company_signup_email_field"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/company_signup_password_confirmation_field"
        android:layout_below="@+id/company_signup_password_field"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/company_signup_password_field"
        android:layout_alignEnd="@+id/company_signup_password_field"
        android:hint="Confirm Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:id="@+id/company_signup_button"
        android:layout_below="@+id/company_signup_password_confirmation_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:onClick="signUpCompany" />
</RelativeLayout>
